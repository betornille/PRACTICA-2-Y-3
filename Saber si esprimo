//Esprimo
#include<stdio.h>
int primo(int);
int main(){
        int numero, resultado;
            printf("Ingresa nÃºmero: ");
            scanf("%d", &numero);
            resultado = primo(numero);
                if(resultado)
        	        printf("El numero %d Si es primo.", numero);
                else
        	        printf("El numero %d no es primo.", numero);
    return 0;
}
int primo(int x) {
        int cont=0, y;
        int resultado;
        if(x == 0 || x == 1)
        	return 0; // False
        else {
        	for (int i = x; i>=1; i--){
        		y = x%i;
        		if(y == 0)
        			cont++;
        	}
        	if(cont == 2)
        		resultado = 1;
        	else
        		resultado= 0;
        }
	return resultado;
}
